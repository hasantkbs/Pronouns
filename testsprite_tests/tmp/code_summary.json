{
  "tech_stack": [
    "python",
    "transformers",
    "pytorch",
    "librosa",
    "soundfile",
    "torchaudio",
    "pyctcdecode",
    "pandas"
  ],
  "features": [
    {
      "name": "CLI Application Runner",
      "description": "Interactive CLI loop that records audio, performs ASR transcription, runs NLU, and executes mapped actions.",
      "files": [
        "app.py",
        "src/core/asr.py",
        "src/core/nlu.py",
        "src/core/actions.py",
        "src/utils/utils.py",
        "config.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Pronouns CLI Pseudo-API",
          "version": "1.0.0",
          "description": "This project exposes no HTTP API; below is a pseudo-API to describe main operations for testing."
        },
        "paths": {
          "/cli/start": {
            "post": {
              "summary": "Start interactive CLI main loop",
              "requestBody": {
                "required": false
              },
              "responses": {
                "200": {"description": "Loop started and then exited by user intent"}
              }
            }
          },
          "/asr/transcribe": {
            "post": {
              "summary": "Transcribe a local WAV file",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "audio_path": {"type": "string"}
                      },
                      "required": ["audio_path"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Transcription text",
                  "content": {
                    "application/json": {
                      "schema": {"type": "object", "properties": {"text": {"type": "string"}}}
                    }
                  }
                }
              }
            }
          },
          "/nlu/parse": {
            "post": {
              "summary": "Parse text to intent and entities",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "text": {"type": "string"}
                      },
                      "required": ["text"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Intent and entities",
                  "content": {
                    "application/json": {
                      "schema": {"type": "object", "properties": {"intent": {"type": "string"}, "entities": {"type": "object"}}}
                    }
                  }
                }
              }
            }
          },
          "/actions/run": {
            "post": {
              "summary": "Run mapped action by intent with entities",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "intent": {"type": "string"},
                        "entities": {"type": "object"}
                      },
                      "required": ["intent"]
                    }
                  }
                }
              },
              "responses": {
                "200": {"description": "Action result string"}
              }
            }
          }
        }
      }
    },
    {
      "name": "ASR Core",
      "description": "Loads Wav2Vec2 model and optional KenLM decoder; provides file-based transcription.",
      "files": [
        "src/core/asr.py",
        "config.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "ASR Core", "version": "1.0.0"},
        "paths": {}
      }
    },
    {
      "name": "NLU Core",
      "description": "Rule-based intent detection and simple entity extraction for Turkish.",
      "files": [
        "src/core/nlu.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "NLU Core", "version": "1.0.0"},
        "paths": {}
      }
    },
    {
      "name": "Action Handlers",
      "description": "Maps intents to concrete actions like greetings, time, listing files, note-taking.",
      "files": [
        "src/core/actions.py"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "Action Handlers", "version": "1.0.0"},
        "paths": {}
      }
    }
  ]
}


